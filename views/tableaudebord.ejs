<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tableau de bord</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <nav>
        <button onclick="history.back()">Retour</button>
        <a href="/api-docs">Documentation API</a>
        <button onclick="logout()">Déconnexion</button>
    </nav>

    <h1>Tableau de bord</h1>
    <p id="user-info"></p>
    <p id="date-today"></p>

    <h2>Réservations en cours</h2>
    <table border="1">
        <thead>
            <tr>
                <th>catwayNumber</th>
                <th>clientName</th>
                <th>boatName</th>
                <th>startDate</th>
                <th>endDate</th>
            </tr>
        </thead>
        <tbody id="reservations-body">
        </tbody>
    </table>

    <script>
        document.addEventListener("DOMContentLoaded", async function() {
            // Afficher la date du jour
            document.getElementById("date-today").textContent = "Date : " + new Date().toLocaleDateString();

            // Récupérer l'ID utilisateur stocké après connexion
            const userId = localStorage.getItem("userId");
            
            if (userId) {
                const userResponse = await fetch(`/users/info/${userId}`);
                if (userResponse.ok) {
                    const user = await userResponse.json();
                    document.getElementById("user-info").textContent = `Utilisateur : ${user.name} (${user.email})`;
                }
            }

            // Charger les réservations
            const token = localStorage.getItem("token");
            const resResponse = await fetch("/reservations", {
                headers: { "Authorization": "Bearer " + token }
            });
            if (resResponse.ok) {
                const reservations = await resResponse.json();
                const tbody = document.getElementById("reservations-body");
                reservations.forEach(res => {
                    const row = `<tr>
                        <td>${res.catwayNumber}</td>
                        <td>${res.clientName}</td>
                        <td>${res.boatName}</td>
                        <td>${res.startDate}</td>
                        <td>${res.endDate}</td>
                    </tr>`;
                    tbody.innerHTML += row;
                });
            }
        });

        function logout() {
            localStorage.removeItem("token");
            window.location.href = "/";
        }
    </script>
</body>
</html>
